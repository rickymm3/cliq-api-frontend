-# app/views/followed_users/index.html.haml
= turbo_frame_tag 'profile_content' do
  = render 'profiles/header', profile: @profile, owner: @owner_viewing
  = render 'profiles/nav', profile: @profile, owner: @owner_viewing, current_section: @section

  .profile-section
    %h2.h5.mb-3 Users You Follow
    - if @followed_users.any?
      %ul.list-unstyled.mb-0
        - @followed_users.each do |user|
          %li.mb-2
            = link_to user.profile.username,
                      profile_path(user.profile),
                      data: { turbo_frame: 'profile_content', turbo_action: 'advance' }
    - else
      %p.text-muted.mb-0 You're not following anyone yet.
