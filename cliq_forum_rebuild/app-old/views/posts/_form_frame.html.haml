-# app/views/posts/_form_frame.html.haml
-# Locals: post:, cliq:

.card.shadow-sm
  .card-body
    - if post.article?
      %div.badge.bg-primary.mb-2 Article
      = render "posts/form", post: post, cliq: cliq

    - elsif post.question?
      %div.badge.bg-warning.text-dark.mb-2 Question
      .alert.alert-info.mb-3
        %strong Questions—coming soon.
        Select “Post” or “Article” above to continue.
      -# (Intentionally no form yet)

    - else
      %div.badge.bg-secondary.mb-2 Post
      = render "posts/form", post: post, cliq: cliq
