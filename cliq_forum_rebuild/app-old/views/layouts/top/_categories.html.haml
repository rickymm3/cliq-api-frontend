%nav.navbar
  - @categories.each do |cliq|
    - key = cliq_theme_key(cliq)
    .nav-item
      = link_to cliq.name,
        cliq_path(cliq),
        class: "nav-link cliq-chip cliq-theme--#{key}",
        'aria-current': "page",
        'data-turbo-frame': "main_content",
        'data-turbo-action': "advance"
  .nav-item
    = render "layouts/top/post_filters", cliq: @cliq, scope: params[:scope]
