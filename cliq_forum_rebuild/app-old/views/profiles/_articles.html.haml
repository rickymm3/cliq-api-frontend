-# app/views/profiles/_articles.html.haml
-# Locals: articles:

%section.mt-4
  .d-flex.align-items-center.justify-content-between
    %h2.h5.mb-3 Articles
    -# Add a "View all" or pagination controls as desired

  - if articles.any?
    .row.row-cols-1.row-cols-md-2.g-3
      - articles.each do |post|
        .col
          .card.h-100.shadow-sm
            .card-body
              %div.badge.bg-primary.mb-2 Article
              %h3.h6.mb-2= link_to post.title, post_id_slug_post_path(post_id: post.id, slug: post.slug)
              %p.text-muted.mb-0= truncate(strip_tags(post.content.to_s), length: 160)
            .card-footer.bg-transparent.small.text-muted
              = time_ago_in_words(post.created_at)
              = " ago"
  - else
    .alert.alert-light.border
      No articles yet.
