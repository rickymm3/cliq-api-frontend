- cliq = subscription.cliq
- enabled = subscription.enabled
- key = cliq_theme_key(cliq)

= turbo_frame_tag dom_id(subscription, :pill) do
  .d-inline-flex.align-items-center.gap-2.me-2.mb-2.subscription-pill{ class: "#{enabled ? 'is-enabled' : 'is-disabled'} cliq-theme--#{key}" }
    %span.subscription-pill__name= cliq.name
    = button_to (enabled ? "Disable" : "Enable"),
      toggle_subscription_path(subscription),
      method: :patch,
      form: { data: { turbo_frame: dom_id(subscription, :pill) } },
      class: "btn btn-xxs btn-outline-secondary"
    = button_to "âœ•",
      subscription_path(subscription, context: "profile_row"),
      method: :delete,
      form: { data: { turbo_frame: dom_id(subscription, :pill) } },
      class: "btn btn-xxs btn-outline-danger subscription-pill__close",
      title: "Unsubscribe"
