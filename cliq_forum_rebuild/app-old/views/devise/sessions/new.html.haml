= turbo_frame_tag "auth_frame" do
  .container.py-5
    .row.justify-content-center
      .col-md-7.col-lg-5
        .card.shadow-sm.border-0
          .card-body.p-4.p-md-5
            .text-center.mb-4
              %h1.h4.mb-1 Welcome back
              %p.text-muted.small Sign in to pick up right where you left off.

            = simple_form_for(resource,
                as: resource_name,
                url: session_path(resource_name),
                html: { data: { turbo: false } }) do |f|
              = f.error_notification

              .mb-3
                = f.input :email,
                          autofocus: true,
                          autocomplete: "email",
                          label: "Email",
                          input_html: { class: "form-control form-control-lg" },
                          label_html: { class: "form-label" }

              .mb-3
                = f.input :password,
                          autocomplete: "current-password",
                          label: "Password",
                          input_html: { class: "form-control form-control-lg" },
                          label_html: { class: "form-label" }

              - if devise_mapping.rememberable?
                .d-flex.align-items-center.justify-content-between.mb-4
                  .form-check
                    = f.check_box :remember_me, class: "form-check-input"
                    = f.label :remember_me, "Remember me", class: "form-check-label"
                  = link_to "Forgot password?", new_password_path(resource_name), class: "small text-decoration-none"
              - else
                .text-end.mb-4
                  = link_to "Forgot password?", new_password_path(resource_name), class: "small text-decoration-none"

              = f.button :submit, "Log in",
                        class: "btn btn-primary w-100 py-2"

            %hr.my-4
            .text-center
              %p.mb-1.small.text-muted Need an account?
              = link_to "Create your Cliq account", new_registration_path(resource_name),
                        class: "btn btn-outline-secondary btn-sm"
