<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h3 class="mb-4">Following</h3>
      <% if @users.any? %>
        <ul class="list-group shadow-sm">
          <% @users.each do |user| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center">
                <div class="avatar-circle bg-light text-secondary me-3" style="width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                  ðŸ‘¤
                </div>
                <%= link_to user["email"], user_profile_path(user["id"]), class: "text-decoration-none fw-bold text-dark" %>
              </div>
              <div style="width: 120px;">
                 <%= render partial: "users/follow_button", locals: { user: user, extra_classes: "mb-0" } %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="alert alert-light text-center">
          <p class="mb-0 text-muted">Not following anyone yet.</p>
        </div>
      <% end %>
      <div class="mt-4">
        <%= link_to "â† Back to Profile", user_profile_path(@user_id), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
