      <%= form.label :content, "Content", class: "form-label fw-bold fs-5 m-0" %>
      <small class="text-muted">Rich text formatting</small>
    </div>
    
    <%= render "shared/rich_text_editor", form: form, field: :content, placeholder: "Write your post here... Use the toolbar for formatting", id: "post_content" %>
  
  <div class="mt-3 p-3 bg-light rounded-2">
    <small class="text-muted d-flex gap-3 flex-wrap">
